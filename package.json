{
  "name": "git-sync",
  "displayName": "Git Sync",
  "description": "Sync settings, keybindings, and extensions across workspaces using GitHub",
  "version": "1.0.0",
  "publisher": "cursor-sync",
  "repository": {
    "type": "git",
    "url": "https://github.com/james-tempus/cursor-settings-sync.git"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:gitSync.wrapWithIgnore",
    "onCommand:gitSync.wrapWithFocus",
    "onCommand:gitSync.setupGitHubSync",
    "onCommand:gitSync.exportSettings",
    "onCommand:gitSync.importSettings",
    "onCommand:gitSync.syncSettings"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gitSync.wrapWithIgnore",
        "title": "Wrap with Ignore",
        "category": "Git Sync"
      },
      {
        "command": "gitSync.wrapWithFocus",
        "title": "Wrap with Focus",
        "category": "Git Sync"
      },
      {
        "command": "gitSync.setupGitHubSync",
        "title": "Setup GitHub Sync",
        "category": "Git Sync"
      },
      {
        "command": "gitSync.exportSettings",
        "title": "Export Settings",
        "category": "Git Sync"
      },
      {
        "command": "gitSync.importSettings",
        "title": "Import Settings",
        "category": "Git Sync"
      },
      {
        "command": "gitSync.syncSettings",
        "title": "Sync Settings",
        "category": "Git Sync"
      }
    ],
    "keybindings": [
      {
        "command": "gitSync.wrapWithIgnore",
        "key": "ctrl+alt+i",
        "mac": "cmd+alt+i",
        "when": "editorTextFocus"
      },
      {
        "command": "gitSync.wrapWithFocus",
        "key": "ctrl+alt+f",
        "mac": "cmd+alt+f",
        "when": "editorTextFocus"
      },
      {
        "command": "gitSync.exportSettings",
        "key": "ctrl+alt+e",
        "mac": "cmd+alt+e"
      },
      {
        "command": "gitSync.importSettings",
        "key": "ctrl+alt+m",
        "mac": "cmd+alt+m"
      },
      {
        "command": "gitSync.syncSettings",
        "key": "ctrl+alt+s",
        "mac": "cmd+alt+s"
      }
    ],
    "configuration": {
      "title": "Git Sync",
      "properties": {
        "gitSync.extensionRemoval.alwaysAllow": {
          "type": "boolean",
          "default": false,
          "description": "Always allow extension removal without confirmation"
        },
        "gitSync.extensionRemoval.neverRemove": {
          "type": "boolean",
          "default": false,
          "description": "Never remove extensions during sync"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
